{
  "name": "recmind",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "desktop:dev": "VITE_DEV_SERVER_URL=http://localhost:3000 concurrently -k \"npm:dev\" \"wait-on http://localhost:3000 && electron --enable-logging electron/main.js\"",
    "desktop:build": "npm run build && electron-builder --mac"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.recmind.desktop",
    "productName": "RecMind",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
      {
        "target": "dmg",
        "arch": [
          "arm64",
          "x64"
        ]
      }
      ]
    }
  }
}
